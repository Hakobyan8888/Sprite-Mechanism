<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:customcontrols="using:GridSprite.CustomControls">

    <Style TargetType="customcontrols:TableGridView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customcontrols:TableGridView">
                    <Canvas x:Name="Canvas" Width="1000" Height="700">
                        <Grid x:Name="RootGrid" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                        </Grid>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
